@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
    [Parameter] public bool InitiallyVisible { get; set; } = true;

    private bool showHelp;

    protected override void OnInitialized()
    {
        showHelp = InitiallyVisible;
    }

    private void ToggleHelp() => showHelp = !showHelp;
}

@if (showHelp)
{
    <div class="alert alert-info position-relative" style="max-width: 800px;">
        <button class="btn-close position-absolute top-0 end-0 m-2" @onclick="ToggleHelp" aria-label="Zavřít"></button>
        @ChildContent
    </div>
}
else
{
    <button class="btn btn-outline-info mb-3" @onclick="ToggleHelp">
        ℹ️ Zobrazit nápovědu
    </button>
}
