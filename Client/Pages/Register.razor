@page "/registrace"
@layout LoggedOutLayout
@inject NavigationManager NavManager

<PageTitle>Pozorování ptáčků - registrujte se!</PageTitle>

<div class="login-background">
    <div class="login-card shadow-sm">

        <div class="text-center">
            <img src="logo-sranda.png" alt="Logo" class="logo-img" />
        </div>

        <h1 class="h2 fw-bold">Pozorování ptáčků</h1>

        <RegisterForm OnRegisterSuccess="@OnSuccess" />

        <NavLink href="/login" class="btn btn-outline-secondary w-100 mt-3">
            Máte účet? Přihlaste se →
        </NavLink>

    </div>
</div>

@code {
    private void OnSuccess()
    {
        NavManager.NavigateTo("/");
    }
}
