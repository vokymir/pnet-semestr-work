@page "/soutez/{PublicEventId}"
@inject BirdApiClient BAC
@inject Blazored.LocalStorage.ILocalStorageService LocalStorage

<PageTitle>Soutěž</PageTitle>

@if (Evnt is null)
{
    <p>Načítání soutěže…</p>
}
else
{
<div class="card shadow-sm mb-4 border-0">
        <div class="card-body">
            <h2 class="card-title mb-3">@Evnt.Name</h2>

            <div class="mb-2 text-muted small">
                <i class="bi bi-hash"></i> Veřejný kód soutěže: <code>@Evnt.PublicIdentifier</code>
            </div>

            <p class="card-text">@Evnt.Description</p>

            <span class="badge bg-@((Evnt.IsPublic ? "success" : "secondary"))">
                @(Evnt.IsPublic ? "Veřejná soutěž" : "Soukromá soutěž")
            </span>

            <p class="mt-2">
                <i class="bi bi-calendar-event"></i>
                <strong>@Evnt.Start.ToString("dd.MM.yyyy")</strong> – <strong>@Evnt.End.ToString("dd.MM.yyyy")</strong>
            </p>

            <hr />

            <h5 class="mt-3">Kritéria</h5>
            <ul class="list-group list-group-flush">
                <li class="list-group-item"><strong>Řád:</strong> @Evnt.OrdoRegex</li>
                <li class="list-group-item"><strong>Čeleď:</strong> @Evnt.FamiliaRegex</li>
                <li class="list-group-item"><strong>Rod:</strong> @Evnt.GenusRegex</li>
                <li class="list-group-item"><strong>Druh:</strong> @Evnt.SpeciesRegex</li>
                <li class="list-group-item"><strong>Duplicitní druhy:</strong> @(Evnt.AllowDuplicates ? "Povoleny" : "Nepovoleny")</li>
            </ul>
        </div>
    </div>

    <h4>Účastníci</h4>

    @if (Leaderboard is null || Leaderboard.Count == 0)
    {
        <p>Žádní účastníci.</p>
    }
    else
    {
        <div class="accordion" id="leaderboardAccordion">
            @foreach (var (watcher, index) in Leaderboard.Select((w, i) => (w, i)))
            {
                var collapseId = $"collapse{index}";
                var headingId = $"heading{index}";

                <div class="accordion-item" @key="watcher.Id">
                    <h2 class="accordion-header" id="@headingId">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
                            data-bs-target="#@collapseId" aria-expanded="false" aria-controls="@collapseId">
                            @watcher.Name ( @(CountReallyValidRecords(watcher))/@(watcher.ValidRecords?.Count ?? 0) záznamů platné)
                        </button>
                    </h2>
                    <div id="@collapseId" class="accordion-collapse collapse" aria-labelledby="@headingId"
                        data-bs-parent="#leaderboardAccordion">
                        <div class="accordion-body">
                            @if (watcher.ValidRecords is null)
                            {
                                <p>Načítání záznamů…</p>
                            }
                            else if (!watcher.ValidRecords.Any())
                            {
                                <p>Žádné platné záznamy.</p>
                            }
                            else
                            {
                                <ul class="list-group">
                                    @foreach (var record in watcher.ValidRecords)
                                    {
                                            <li class="list-group-item">
                                                <strong>@record.Bird?.BinomicName</strong> — @record.DateSeen.ToString("F");

                                                 @if (NotValidRecordIds.Contains(record.Id))
                                                    {
                                                        <span class="badge bg-danger ms-2">Neplatný</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-success ms-2">Platný</span>
                                                    }

                                                @if (U?.Id == Evnt?.MainAdminId)
                                                {
                                                    <button class="btn btn-sm btn-outline-secondary ms-2"
                                                            @onclick="() => ToggleValidity(record)">
                                                        @(NotValidRecordIds.Contains(record.Id) ? "✓ Udělat platný" : "✗ Udělat neplatný")
                                                    </button>
                                                }

                                                <a href=@($"/zaznam/{record.Id}")>
                                                Prohlédnout
                                                </a>
                                            </li>
                                    }
                                </ul>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
}

@code {
    [Parameter]
    public string PublicEventId { get; set; } = default!;
    private UserDto? U = null;

    private BirdWatching.Shared.Model.Event? Evnt;
    private List<BirdWatching.Shared.Model.WatcherOnLeaderboardDto> Leaderboard = new();
    private List<int> NotValidRecordIds = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            U = await LocalStorage.GetItemAsync<UserDto>("userDto");
            if (U is null) throw new Exception("Cannot find userDto in local storage.");

            await LoadEventAsync();

        }
        catch (Exception ex)
        {
            Console.WriteLine($"Chyba při načítání: {ex.Message}");
        }
    }

    private async Task LoadEventAsync(){
            var edto = await BAC.Event_GetByPublicIdAsync(PublicEventId);
            if (edto is null) edto = new();
            Evnt = edto.ToEntity();
            NotValidRecordIds = new();
            foreach (var r in edto.NotValidRecords)
                NotValidRecordIds.Add(r.Id);

            // Create placeholder leaderboard entries from participants
            Leaderboard = edto.Participants?
            .Select(w => new WatcherOnLeaderboardDto
            {
                Id = w.Id,
                Name = $"{w.FirstName} {w.LastName}",
                ValidRecords = null,
            }).ToList() ?? new();

            Console.WriteLine(Leaderboard.Count());
            // Now load their records in parallel
            foreach (var watcher in Leaderboard)
            {
                _ = LoadRecordsAsync(watcher); // fire and forget
            }
            await InvokeAsync(StateHasChanged);
    }

    private async Task LoadRecordsAsync(WatcherOnLeaderboardDto watcher)
    {
        try
        {
            var updated = await BAC.Watcher_GetByIdAndEventAsync(watcher.Id, Evnt!.PublicIdentifier);
            if (updated is not null)
            {
                var target = Leaderboard.FirstOrDefault(w => w.Id == updated.Id);
                if (target is not null)
                {
                    target.ValidRecords = updated.ValidRecords;

                    Leaderboard = Leaderboard
                    .OrderByDescending(w => CountReallyValidRecords(w))
                    .ToList();

                    await InvokeAsync(StateHasChanged);
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Chyba při načítání záznamů pro {watcher.Name}: {ex.Message}");
        }
    }

    private int CountReallyValidRecords(WatcherOnLeaderboardDto watcher){
        int count = 0;

        if (watcher.ValidRecords is null)
            return -1;
        foreach(var r in watcher.ValidRecords){
            if (!NotValidRecordIds.Contains(r.Id)){
            count++;
            }
        }

        return count;
    }

private async Task ToggleValidity(RecordDto record)
{
    if (Evnt is null || U is null) return;

    try
    {
        await BAC.Event_ToggleRecordValidityAsync(Evnt.Id, record.Id);

        await LoadEventAsync();
        await InvokeAsync(StateHasChanged);
    }
    catch (Exception ex)
    {
        Console.WriteLine("Chyba při přepnutí validity: " + ex.Message);
    }
}
}
